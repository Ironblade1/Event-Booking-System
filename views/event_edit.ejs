<% try { %>
    <%- include('partials/header', {user: [firstName, lastName]}) %>
  <%} catch(error) { %>
    <%- include('partials/header')%>
  <%} %>

  <form class="event-submission" action="/<%=eventId%>/event-update" method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Event Name</label>
        <input value = "<%=event.eventName%>" name="eventName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="e.g. Physical Therapy">
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <div class="md-form mx-1 my-1">
                    <input value = "<%=event.unformatedStartTime%>" name="startTime" type="time" id="inputMDEx1" class="form-control">
                    <label for="inputMDEx1">Start Time</label>
                </div>
                
            </div>
            <div class="col-lg-3">
                <div class="md-form mx-1 my-1">
                    <input value="<%=event.unformatedEndTime%>" name="endTime" type="time" id="inputMDEx1" class="form-control">
                    <label for="inputMDEx1">End Time</label>
                </div>
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-4">
                <label for="exampleFormControlSelect2">Select Month of Event</label>
                <select  name="eventMonth" multiple class="form-control" id="exampleFormControlSelect2">
                    <% months.forEach(month => { %>
                        <%if(month == event.eventMonth){%>
                            <option selected><%=month%></option>
                        <%} else {%>
                            <option><%=month%></option>
                        <%}%>
                    <%})%>

                </select>
            </div>
            <div class="col-lg-4">
                <label for="exampleFormControlSelect2">Select Day of Event</label>
                <select name="eventDay" multiple class="form-control" id="exampleFormControlSelect12">
                    <% for(var i = 1; i <= 31; i++ ){ %>
                        <%if(i==event.eventDay){%>
                        <option selected><%=i%></option>
                        <%}else{%>
                            <option><%=i%></option>
                        <%}%>
                    <%}%>
                </select>
            </div>
            <div class="col-lg-4">
                <label for="exampleFormControlSelect2">Select Year</label>
                <select name="eventYear" multiple class="form-control" id="exampleFormControlSelect12">
                    <% for(var i = 2020; i <= 2025; i++ ){ %>
                        <%if(i==event.eventYear){%>
                            <option selected><%=i%></option>
                            <%}else{%>
                                <option><%=i%></option>
                            <%}%>
                    <%}%>
                </select>
            </div>

        </div>
       


    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Additional Information</label>
        <textarea name="eventInfo" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="e.g. Location, Dress Code, etc."><%=event.eventInfo%></textarea>
    </div>
    <div class="form-group">
        <button type ="submit" class="btn btn-secondary">Submit</button>
        <a href="/"><button type="button" class="btn btn-danger">Cancel</button></a>
    </div>
    
</form>



<%- include('partials/footer') %>