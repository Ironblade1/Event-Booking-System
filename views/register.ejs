<% try { %>
    <%- include('partials/header', {user: [firstName, lastName]}) %>
  <%} catch(error) { %>
    <%- include('partials/header')%>
  <%} %>

<section class="vh-100">
    <div class="container py-5">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <h1 class="login-header">Register</h1>
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                    class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form action="/register" method="post">
                    <!-- First Name input-->
                    <div class="row mb-4">
                        <div class="col">
                          <div class="form-outline">
                            <input name="firstName" type="text" id="form6Example" class="form-control form-control-lg" placeholder="First name"/>
                            <label class="form-label" for="form6Example1"></label>
                          </div>
                        </div>
                    <!-- Last Name input-->
                        <div class="col">
                          <div class="form-outline">
                            <input name="lastName" type="text" id="form6Example2" class="form-control form-control-lg"" placeholder="Last name" />
                            <label class="form-label" for="form6Example2"></label>
                          </div>
                        </div>
                      </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="form1Example13" class="form-control form-control-lg"
                            placeholder="Email address" name="username" />
                        <label class="form-label" for="form1Example13"></label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="form1Example23" class="form-control form-control-lg"
                            placeholder="Password" name="password"/>
                        <label class="form-label" for="form1Example23"></label>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        
                    </div>

                    <!-- Submit button -->
                    <button type="submit" style="width: 100%" class="btn btn-primary btn-lg btn-block">Sign Up</button>
                </form>
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-primary" style="background-color: #3b5998" href="#!"
                                    role="button">
                                    <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                                </a>
                            </div>

                            <div class="col">
                                <a class="btn btn-primary " style="background-color: #55acee" href="#!"
                                    role="button">
                                    <i class="fab fa-twitter me-2"></i>Continue with Twitter</a>
                            </div>

                            <div class="col">
                                <a class="btn btn-primary " style="background-color: #ec4c4c" href="#!"
                                    role="button">
                                    <i class="fab fa-google me-2"></i>Continue with Google</a>
                            </div>

                        </div>
                    </div>
               
            </div>
        </div>
    </div>
</section>







<%- include('partials/footer') %>